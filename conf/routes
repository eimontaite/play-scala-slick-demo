# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.PersonController.index
POST    /persons                    controllers.PersonController.addPerson
GET     /persons                    controllers.PersonController.getPersons
GET     /city                       controllers.CityController.index
POST    /city/new                   controllers.CityController.addCity

# Edit a person
GET     /persons/:id                controllers.PersonController.editPerson(id:Long)
POST    /persons/:id                controllers.PersonController.update(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
